<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestsActivity"
    android:background="@drawable/background">

    <include
        android:id="@+id/requests_toolbar"
        layout="@layout/app_bar_layout">
    </include>

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/requests_tab_layout"
        android:layout_below="@id/requests_toolbar"
        app:tabTextColor="@android:color/white">

    </com.google.android.material.tabs.TabLayout>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/requests_tabs_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/requests_tab_layout">

    </androidx.viewpager.widget.ViewPager>


</RelativeLayout>