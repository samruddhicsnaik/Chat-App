<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/receiver_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:background="@drawable/receiver_message_layout"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/receiver_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/receiver_message_layout"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:text="Receiver messages"
        android:padding="10dp"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/msg_seen"
        android:layout_below="@id/sender_message"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/file_seen"
        android:layout_below="@id/sender_image"
        android:layout_alignParentEnd="true"/>


    <ImageView
        android:id="@+id/sender_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:background="@drawable/sender_message_layout"
        android:scaleType="centerCrop" />


    <TextView
        android:id="@+id/sender_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/sender_message_layout"
        android:padding="10dp"
        android:text="Sender messages"
        android:textColor="@android:color/white" />

</RelativeLayout>